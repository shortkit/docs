{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "shortkit",
  "description": "Drop-in short-form video feeds for your app. TikTok-quality video experience without the infrastructure complexity.",
  "colors": {
    "primary": "#FF6600",
    "light": "#fff8f5",
    "dark": "#121216"
  },
  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#0f0f12"
    }
  },
  "fonts": {
    "heading": {
      "family": "Public Sans",
      "weight": 600
    },
    "body": {
      "family": "Public Sans",
      "weight": 400
    }
  },
  "favicon": "/favicon.svg",

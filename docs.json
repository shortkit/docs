{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "shortkit",
  "description": "Drop-in short-form video feeds for your app. TikTok-quality video experience without the infrastructure complexity.",
  "colors": {
    "primary": "#FF6600",
    "light": "#fff8f5",
    "dark": "#121216"
  },
  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#0f0f12"
    }
  },
  "fonts": {
    "heading": {
      "family": "Public Sans",
      "weight": 600
    },
    "body": {
      "family": "Public Sans",
      "weight": 400
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "icon": "house",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "core-concepts",
              "architecture"
            ]
          },
          {
            "group": "Client SDK",
            "pages": [
              "sdk/overview",
              "sdk/ios",
              "sdk/android",
              "sdk/react-native",
              "sdk/web",
              "sdk/configuration",
              "sdk/theming",
              "sdk/deep-linking",
              "sdk/engagement-signals"
            ]
          },
          {
            "group": "Video Infrastructure",
            "pages": [
              "infrastructure/overview",
              "infrastructure/content-ingestion",
              "infrastructure/transcoding",
              "infrastructure/cdn-delivery",
              "infrastructure/feed-ranking",
              "infrastructure/live-streaming"
            ]
          },
          {
            "group": "Admin Portal",
            "pages": [
              "admin-portal/overview",
              "admin-portal/content-management",
              "admin-portal/feed-configuration",
              "admin-portal/ab-testing",
              "admin-portal/analytics",
              "admin-portal/ad-management",
              "admin-portal/settings"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/identity-management",
              "guides/ad-integration",
              "guides/playback-restrictions",
              "guides/webhooks",
              "guides/data-export"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/errors"
            ]
          },
          {
            "group": "Content",
            "pages": [
              "api-reference/endpoints/uploads",
              "api-reference/endpoints/content",
              "api-reference/endpoints/content-bulk"
            ]
          },
          {
            "group": "Feed",
            "pages": [
              "api-reference/endpoints/feed",
              "api-reference/endpoints/config"
            ]
          },
          {
            "group": "Analytics",
            "pages": [
              "api-reference/endpoints/events",
              "api-reference/endpoints/analytics",
              "api-reference/endpoints/export"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "api-reference/endpoints/ranking",
              "api-reference/endpoints/experiments",
              "api-reference/endpoints/webhooks"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/shortkit_logo.jpeg",
    "dark": "/logo/shortkit_logo.jpeg",
    "href": "https://shortkit.dev"
  },
  "navbar": {
    "links": [
      {
        "label": "Home",
        "href": "https://shortkit.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Contact Us",
      "href": "https://calendly.com/michael-shortkit/20-min-meeting"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/shortkit",
      "github": "https://github.com/shortkit"
    }
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "light": "github-light",
        "dark": "one-dark-pro"
      }
    }
  }
}
